generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Producto {
  id          Int     @id @default(autoincrement())
  nombre      String  
  descripcion String
  precio      Int
  categoria   String
  Pedido      Pedido? @relation(fields: [pedidoId], references: [id])
  pedidoId    Int?
}

model Pedido {
  id        Int        @id @default(autoincrement())
  nombre    String
  apellido  String
  telefono  Int
  direccion String
  producto  Producto[]
  User      User?      @relation(fields: [userId], references: [id])
  userId    Int?
}

model User {
  id         Int      @id @default(autoincrement())
  mail       String   @unique
  contrasena String
  rol        String
  pedidos    Pedido[]
}
